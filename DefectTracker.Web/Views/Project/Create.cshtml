@model DefectTracker.Web.Models.ProjectViewModels.CreateProjectRequest

@{
    ViewData["Title"] = "Create";
}



<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Create Project</h5>
                </div>
                <div class="ibox-content">
                    <form method="post" asp-controller="Project" asp-action="Create">
                        <input asp-for="@Model.UserId" type="hidden" />
                        <div class="form-group row">
                            <label asp-for="@Model.Name" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="@Model.Name" class="form-control" />
                                <span asp-validation-for="@Model.Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group row">
                            <label asp-for="@Model.OriginDateOffset" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="@Model.OriginDateOffset" class="form-control" />
                                <span asp-validation-for="@Model.OriginDateOffset" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group row">
                            <div class="col-sm-4 col-sm-offset-2">
                                <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-white btn-sm" type="reset">Cancel</a>
                                <button class="btn btn-primary btn-sm" type="submit">Create Project</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

