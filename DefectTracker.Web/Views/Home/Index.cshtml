@model DefectTracker.Web.ViewModels.Home.IndexViewModel

@{
    ViewData["Title"] = "Projects";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Projects</h2>
        <ol class="breadcrumb">
            <li class="active breadcrumb-item">
                <strong>Projects</strong>
            </li>
        </ol>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInUp">

    <div class="ibox">
        <div class="ibox-title">
            <h5>All projects assigned to this account</h5>
            <div class="ibox-tools">
                <a asp-area="" asp-controller="Project" asp-action="Create" class="btn btn-primary btn-xs">Create new project</a>
            </div>
        </div>
        <div class="ibox-content">
            <div class="m-b-sm m-t-sm">

                <div class="input-group">
                    <div class="input-group-prepend">
                        <button tabindex="-1" class="btn btn-white btn-sm" type="button"><i class="fa fa-refresh"></i> Refresh</button>
                    </div>
                    <input type="text" class="form-control form-control-sm">

                    <div class="input-group-append">
                        <button tabindex="-1" class="btn btn-primary btn-sm" type="button">Go!</button>
                    </div>
                </div>
            </div>

            <div class="project-list">
                @if (Model.Projects.Any())
                {
                    <table class="table table-hover">
                        <tbody>
                            @foreach (var project in Model.Projects)
                            {
                                <tr>
                                    <td class="project-status">
                                        <span class="label label-primary">Active</span>
                                    </td>
                                    <td class="project-title">
                                        <a asp-area="" asp-controller="Project" asp-action="Index" asp-route-id="@project.Id">@project.Name</a>
                                        <br />
                                        <small>Created @project.DateCreatedOffset.ToString("d")</small>
                                    </td>
                                    <td class="project-actions">
                                        <a href="#" class="btn btn-white btn-sm"><i class="fa fa-folder"></i> View </a>
                                        <a href="#" class="btn btn-white btn-sm"><i class="fa fa-pencil"></i> Edit </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="jumbotron mt-4">
                        <h5 class="mb-4">Looks like you don't have any projects yet.</h5>
                        <h6>Click the "Create Project" button above to get started.</h6>
                    </div>
                }
            </div>
        </div>
    </div>
</div>